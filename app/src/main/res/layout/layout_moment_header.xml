<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_header_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tweet_back_wall_height"
        android:layout_alignParentTop="true"
        android:fadingEdge="none"
        android:focusable="false"
        android:paddingBottom="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/moment_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_header_back">

        <ImageButton
            android:id="@+id/iv_self_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/potral" />

        <TextView
            android:id="@+id/tv_self_nick"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_self_portrait"
            android:text="TestID"
            android:gravity="center"
            android:textColor="@color/title_bar_text"
            android:textSize="@dimen/title_bar_text_size" />

    </RelativeLayout>

</RelativeLayout>
