<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:clickable="true">

    <ImageView
        android:id="@+id/iv_title_back"
        android:layout_width="@dimen/title_bar_button_height"
        android:layout_height="@dimen/title_bar_button_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_back_bg_selector" />

    <TextView
        android:id="@+id/tv_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_title_back"
        android:text="@string/app_name"
        android:textColor="@color/title_bar_text"
        android:textSize="@dimen/title_bar_text_size" />

    <Button
        android:id="@+id/btn_title_fun"
        android:layout_width="@dimen/title_bar_button_height"
        android:layout_height="@dimen/title_bar_button_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_camera_bg_selector" />
</RelativeLayout>
