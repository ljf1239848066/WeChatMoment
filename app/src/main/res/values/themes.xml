<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light application theme. -->
    <style name="AppThemeLight.MenuTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/colorForegroundTitleLight</item>
    </style>
    <style name="AppThemeLight.ActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="android:itemTextAppearance">@style/AppThemeLight.MenuTextStyle</item>
    </style>
    <style name="AppThemeLight.ActionBarPopupStyle" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/colorPrimaryLight</item>
    </style>
    <style name="AppThemeLight.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <!-- 这个颜色就改变toolbar左边按钮的颜色配置,只能改变颜色不能改变图片-->
        <item name="color">@color/textColorPrimaryLight</item>
    </style>
    <!-- 颜色在Drawable里面区分 -->
    <style name="AppThemeLight.OverflowButtonStyle" parent="Base.Widget.AppCompat.ActionButton.Overflow">
        <!-- 这个颜色就改变toolbar右边按钮的颜色配置,改变颜色或者改变图片-->
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>
    <style name="AppThemeLight.Dialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar.MinWidth">
        <item name="android:background">@color/colorBackgroundLight</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLightDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="colorAccentDisable">@color/colorAccentDisableLight</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorBackground">@color/colorBackgroundLight</item>
        <item name="colorForeground">@color/colorForegroundLight</item>
        <item name="colorForegroundTitle">@color/colorForegroundTitleLight</item>
        <item name="colorForegroundTitleRevert">@color/colorForegroundTitleRevertLight</item>
        <item name="colorForegroundHighlight">@color/colorForegroundHighlightLight</item>
        <item name="colorBackgroundRevert">@color/colorForegroundLight</item>
        <item name="colorForegroundRevert">@color/colorBackgroundLight</item>
        <item name="transBackColor">@color/transback</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/AppThemeLight.DrawerArrowToggle</item>
        <item name="actionBarStyle">@style/AppThemeLight.ActionBarStyle</item>
        <item name="actionBarPopupStyle">@style/AppThemeLight.ActionBarPopupStyle</item>
        <item name="colorOverflowButton">@color/textColorPrimaryLight</item>
        <item name="actionOverflowButtonStyle">@style/AppThemeLight.OverflowButtonStyle</item>
        <item name="colorLinearLayoutDivider">@color/colorLinearLayoutDividerLight</item>
        <item name="colorIndicatorRightBack">@color/colorIndicatorRightBackLight</item>
        <item name="colorIndicatorRightFore">@color/colorIndicatorRightForeLight</item>
        <item name="colorIndicatorWrongBack">@color/colorIndicatorWrongBackLight</item>
        <item name="colorIndicatorWrongFore">@color/colorIndicatorWrongForeLight</item>
        <item name="colorIndicatorNotBack">@color/colorIndicatorNotBackLight</item>
        <item name="colorIndicatorNotFore">@color/colorIndicatorNotForeLight</item>
        <item name="colorIndicatorNotBorder">@color/colorIndicatorNotBorderLight</item>
        <item name="android:dialogTheme">@style/AppThemeLight.Dialog</item>
        <item name="android:actionMenuTextColor">@color/colorForegroundLight</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryLight</item>-->
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.NoActionBar" parent="AppThemeLight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeLight.TransparentActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="android:itemTextAppearance">@style/AppThemeLight.MenuTextStyle</item>
    </style>
    <style name="AppTheme.TransparentActionBarAndTitle" parent="AppThemeLight">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="actionBarStyle">@style/AppThemeLight.TransparentActionBarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>